  <%- include('./partials/header'); %>

  <!--prod-->
  <div class="col-sm-12">
    <section id="sectionproducts" class="our-webcoderskull padding-mg">
      <div class="container">
        <div class="row heading heading-icon">
          <h2>წიგნები</h2>
        </div>
        <ul class="row">
          <% products.forEach( prod => { %>
          <li class="prod col-12 col-md-6 col-lg-3">
            <div class="cnt-block equal-height">
              <figure>
                <a href="/products/<%= prod.id %>">
                  <img src="data:image/png;base64,<%= new Buffer(prod.imgBuffer).toString('base64') %>"
                    class="img-responsive" alt="" />
                </a>
              </figure>
              <div class="product-content">
                <h3 class="title"><a href="/products/<%= prod.id %>"><%= prod.title %></a></h3>
                <div class="price">
                  <span><%= prod.price %> ₾</span>
                </div>
                <p class="descript"><%= prod.miniDescription %></p>
              </div>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>
    </section>
  </div>
  </div>
  </div>

